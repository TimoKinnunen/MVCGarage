@model IEnumerable<MVCGarage.Models.VehicleOverview>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>@ViewBag.ErrorMessage</p>
<p>@ViewBag.SearchMessage</p>
<div>
    @using (Html.BeginForm("Search", "Vehicles", FormMethod.Get))
    {
        <b>Search by: </b>@Html.RadioButton("searchBy", "Registration number")<text>Registration number</text>
        @Html.RadioButton("searchBy", "Vehicle type")<text>Vehicle type</text><br />
        @Html.TextBox("Search");<input type="submit" value="Search" />
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutTime)
            </th>
            <th>&nbsp;</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckInTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckOutTime)
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>
