@*@model IEnumerable<MVCGarage.Models.Vehicle>*@
@model IEnumerable<MVCGarage.Models.VehicleOverview>

@{
    ViewBag.Title = "Checked in and checked out vehicles";
}

<h2>Checked in and checked out vehicles</h2>

<p>
    @Html.ActionLink("Check in a new vehicle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckInTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckOutTime)
        </th>
        <th>&nbsp;</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutTime)
            </td>
            <td>
                @Html.ActionLink("Edit details", "Edit", new { id = item.Id }) |
                @Html.ActionLink("View details", "Details", new { id = item.Id }) |
                @if (item.IsInGarage)
                {
                    @Html.ActionLink("Check out", "Delete", new { id = item.Id })
                }
                else
                {
                    @Html.ActionLink("Receipt", "Kvitto", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
